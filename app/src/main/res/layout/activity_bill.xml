<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E3E3"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/billRootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COFFEE"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/txtStoreAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42/5 Đường Số 2, Hiệp Bình Phước, TP Thủ Đức, Hồ Chí Minh"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtStorePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0904813138"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ mua: --:--"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HÓA ĐƠN BÁN"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingBottom="8dp" />

            <TableLayout
                android:id="@+id/layoutItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3"
                android:background="#FFFFFF"
                android:padding="2dp">

                <TableRow android:background="#B0B0B0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tên"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="SL"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Giá"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tổng"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="4dp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng dịch vụ: 0đ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán: ..."
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="right"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtBillId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã hóa đơn: 1234"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtCashier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu ngân: Đỗ Xuân Chiến"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/txtCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng: ..."
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: ..."
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nQuý khách vui lòng kiểm tra lại hóa đơn trước khi thanh toán.\nXin cảm ơn quý khách!\nHẹn gặp lại quý khách lần sau."
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="#000000"
                android:paddingTop="16dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
